# === Exchange / General ===
EXCHANGE=binanceusdm
API_KEY=
API_SECRET=
USE_TESTNET=false

# === Strategy Timeframes ===
TIMEFRAME=15m
HTF_TIMEFRAME=1h

# === Universe & Positions ===
UNIVERSE_SIZE=12
UNIVERSE_SYMBOLS=
MAX_POSITIONS=3

# === Risk Management ===
ACCOUNT_EQUITY_USDT=1000
RISK_PER_TRADE=0.01
ABS_RISK_USDT=0
LEVERAGE=3
MARGIN_MODE=isolated

# Notional & margin guards
MAX_NOTIONAL_FRACTION=0.30
MIN_NOTIONAL_USDT=10
MARGIN_BUFFER_FRAC=0.90
TOTAL_NOTIONAL_CAP_FRACTION=0.50

# === Signal Settings ===
EMA_FAST=50
EMA_SLOW=200
RSI_PERIOD=14
RSI_LONG_MIN=52
RSI_SHORT_MAX=48
ADX_PERIOD=14
MIN_ADX=18

# === SL/TP Protection (no trailing) ===
ATR_MULT_SL=2.0
TP_R_MULT=2.0
MAX_SL_PCT=0
STOP_CAP_BEHAVIOR=clamp
PROTECTION_BUFFER_PCT=0.001

# === Ops ===
POLL_SECONDS=30
LOG_TRADES_CSV=trades_futures.csv
DRY_RUN=false
ALLOW_SHORTS=true
HEDGE_MODE=false
ENTRY_SLIPPAGE_MAX_PCT=0.01

# === Web UI ===
ENABLE_WEB=true
WEB_HOST=0.0.0.0
WEB_PORT=8080
