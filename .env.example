# Exchange
EXCHANGE=binanceusdm
API_KEY=YOUR_KEY
API_SECRET=YOUR_SECRET
USE_TESTNET=true

# Timeframes / universe
TIMEFRAME=15m
HTF_TIMEFRAME=1h
UNIVERSE_SIZE=12
MAX_POSITIONS=1

# Risk
ACCOUNT_EQUITY_USDT=106
RISK_PER_TRADE=0.10
ABS_RISK_USDT=10
LEVERAGE=3
MARGIN_MODE=cross

# Guards
MAX_NOTIONAL_FRACTION=0.30
MIN_NOTIONAL_USDT=10
MARGIN_BUFFER_FRAC=0.90

# Signals
EMA_FAST=50
EMA_SLOW=200
RSI_PERIOD=14
RSI_LONG_MIN=52
RSI_SHORT_MAX=48
ADX_PERIOD=14
MIN_ADX=18

# Exits
ATR_MULT_SL=2.0
TP_R_MULT=2.0
BREAKEVEN_AFTER_R=1.0
TRAIL_AFTER_R=1.5
TRAIL_ATR_MULT=1.0

# Ops
POLL_SECONDS=30
LOG_TRADES_CSV=trades_futures.csv
DRY_RUN=true
ALLOW_SHORTS=true
HEDGE_MODE=false
